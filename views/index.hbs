<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<!-- Form to select date range and currency -->
<div class="filter-form">
  <label for="startDate">Start Date:</label>
  <input type="date" id="startDate" name="startDate" />

  <label for="endDate">End Date:</label>
  <input type="date" id="endDate" name="endDate" />

  <label for="currency">Currency:</label>
  <select id="currency">
    <option value="USD">USD</option>
    <option value="EUR">EUR</option>
  </select>
</div>

<!-- Container to display max and min values -->
<div id="maxMinContainer">
    <p id="maxPrice">Max Price: N/A</p>
    <p id="minPrice">Min Price: N/A</p>
</div>

<!-- Canvas element to draw the chart -->
<p class="center-text">
  <canvas id="myChart" width="400" height="200"></canvas>
</p>

<!-- Required attribution to CoinDesk as per their API usage guidelines -->
<p class="center-text">
  <small>
    Data provided by
    <a
      href="https://www.coindesk.com/price/bitcoin"
      target="_blank"
    >CoinDesk</a>. Powered by CoinDesk.
  </small>
</p>
